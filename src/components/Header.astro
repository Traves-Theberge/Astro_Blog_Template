---
// Comments //
/* This file is a header component that is used to render the header of the website.
It contains the site title, navigation links, and social media links. */
//imports
// The HeaderLink component is imported from the components folder. //
import HeaderLink from './HeaderLink.astro';
// The SITE_TITLE constant is imported from the consts file. //
import { SITE_TITLE } from '../consts';
// The ThemeIcon component is imported from the components folder. //
import ThemeIcon from './ThemeIcon.astro';
---
<!-- The HeaderLink, SITE_TITLE, and ThemeIcon components are rendered. -->
<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">About</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/project">Projects</HeaderLink>
		</div>
		<div>
		<div class="social-links">
			<ThemeIcon />
			</a>
			<a href="https://github.com/Traves-Theberge" target="_blank">
				<span class="sr-only">Traves-Theberege GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a.active {
    text-decoration: none;
}
	.dark nav a.active {
    border-bottom-color: var(--black); /* Dark mode color */
    color: var(--white); /* Dark mode color */
}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
