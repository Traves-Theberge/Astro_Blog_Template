---
// Comments //
/* This file is used to render the blog post pages. It uses the BlogPost layout and
 the Content component to render the post content */

//imports
// The BaseHead component is imported from the components folder. // 
import BaseHead from '../../components/BaseHead.astro';
// The Header component is imported from the components folder. //
import Header from '../../components/Header.astro';
// The Footer component is imported from the components folder. //
import Footer from '../../components/Footer.astro';
// The SITE_TITLE and SITE_DESCRIPTION constants are imported from the consts file. //
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
// The getCollection function is imported from 'astro:content'. //
import { getCollection } from 'astro:content';
// The FormattedDate component is imported from the components folder. //
import FormattedDate from '../../components/FormattedDate.astro';

/*const posts is an array of blog posts. The getCollection function is used to fetch
the blog collection */ 
const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<!-- The BaseHead component is rendered with the SITE_TITLE
		and SITE_DESCRIPTION properties. -->
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
